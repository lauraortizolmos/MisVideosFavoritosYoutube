<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        Editar
    </title>
    <%- include ('partials/_header') %>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap" rel="stylesheet">
</head>

<body>
    <%- include ('partials/navigation') %>

        <div class="container p-5">
            <div class="row">
                <div class="col-sm-4 offset-md-4">
                    <div class="card animated flipInY">
                        <div class="card-header bg-dark text-white text-center">
                            <h3>Editar Video</h3>
                        </div>
                        <div class="card-body">
                            <form action="/update/<%= data.id %>" method="POST">
                                <div class="form-group">
                                    <input type="text" name="name" value="<%= data.name%>"
                                     placeholder="Nombre" class="form-control" autofocus>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="description" value="<%= data.description%>" 
                                    placeholder="Link " class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="category" value="<%= data.category%>" 
                                    placeholder="Categoria" class="form-control">
                                </div>

                                <button type="submit" class="btn btn-primary">
                Guardar video
              </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</body>
<%- include ('partials/_footer') -%>

</html>